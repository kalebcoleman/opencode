{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "websearch": "allow",
    "webfetch": "allow",
    "question": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "bash": "allow",
    "edit": "allow"
  },
  "plugin": [
    "oh-my-opencode@latest"
  ],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (Local)",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1",
        "apiKey": "local-only"
      },
      "models": {
        "qwen2.5-coder:7b": {
          "name": "Qwen 2.5 Coder 7B (Local)",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        }
      }
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
